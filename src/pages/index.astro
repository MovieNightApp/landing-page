---
import Layout from "../layouts/Layout.astro";
---

<Layout title="MovieNight App">
  <main>
		<img src="/logo.webp" width="250px" height="250px" alt="MovieNight App Logo"/>
    <h1>Make <span class="text-gradient">Movie Night</span> simple</h1>
    <p class="strapline">Unleash Your Cinema Spirit! Swipe, match, and share your way to the ultimate movie night with friends and family. Get ready for a blockbuster experience!</p>
    <p class="coming-soon">
      Coming to iOS and Android soon!
    </p>
  </main>
  <section id="footer">
    <a href="privacy-policy.txt">Privacy Policy</a>
  </section>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
    height: 100vh;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    text-align: center;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  input {
    padding: 8px;
    border-radius: 10px;
    background-color: #334155;
    max-width: 275px;
    width: 100vw;

    outline: none;

    border: 2px solid transparent;
  }

  input:focus {
    border: 2px solid white;
  }

  button {
    padding: 4px 16px;
		border-radius: 20px;
  }

  button:hover {
    background: #334155;
  }

  p.strapline {
    font-size: 1.2rem;
    text-align: center;
    margin: 0;
    margin-top: 1rem;
  }

  p.coming-soon {
    font-size: 1.2rem;
    text-align: center;
    margin: 0;
    margin-top: 2rem;;
  }

  section#footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    text-align: center;
  }
</style>
